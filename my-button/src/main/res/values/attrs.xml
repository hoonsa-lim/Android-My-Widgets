<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyButton">
        <attr name="gradientColorStart" format="color"/>
        <attr name="gradientColorCenter" format="color"/>
        <attr name="gradientColorEnd" format="color"/>
        <attr name="gradientOrientation" format="enum">
            <enum name="top_bottom" value="0"/>
            <enum name="topRight_bottomLeft" value="1"/>
            <enum name="right_left" value="2"/>
            <enum name="bottomRight_topLeft" value="3"/>
            <enum name="bottom_top" value="4"/>
            <enum name="bottomLeft_topRight" value="5"/>
            <enum name="left_right" value="6"/>
            <enum name="topLeft_bottomRight" value="7"/>
        </attr>
    </declare-styleable>
</resources>